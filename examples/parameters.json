{
    "name" : "dependency_based_context",
    "corpus_path" : "../../wikipedia_data/fr_split_out/parsing.results.french",
    "parameters" : 
        {   
            "max_len":100,
            "corpus": 
                {   
                    "reader" : "CONLLU",
                    "lower": true,
                    "ignore_punctuation" : false,
                    "language": "French"
                },
            "target_vocabulary" :
                {
                    "attributes" : ["POS", "lemma"],
                    "filters" : {
                        "stop_words" : "lemma", 
                        "filter_by_POS" : {
                            "attribute" : "POS",
                            "keep" : ["NOUN", "VERB", "ADJ"]
                        },
                        "remove_most_frequent": 100, 
                        "remove_least_frequent" : 2
                    }
                },
            "context_vocabulary" : 
                {
                    "attributes" : ["POS", "lemma"],
                    "filters" : {
                        "stop_words" : "lemma", 
                        "filter_by_POS" : {
                            "attribute" : "POS",
                            "keep" : ["NOUN", "VERB", "ADJ"]
                        }
                    }
                },
            "dependency_context" : 
                {
                    "collapse" : true,
                    "labels" : false,
                    "depth" : 1, 
                    "directed" : false, 
                    "deprel_keep" : ["nsubj", "amod", "advmod"]
                },
            "embedding" :
                {
                    "weighting": {
                        "type" : "PPMI",
                        "parameters" : {
                            "alpha" : 1
                        }
                    },
                    "reduction" : {
                        "type" : "SVD",
                        "parameters" :{
                            "dimensions" : 300
                        }  
                    } 
                }
            
        }
}